          <%= img_link_to_edit edit_recipe_path(recipe) %>
          <%= img_link_to_drop recipe %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  <% end %>


  <% if @recipes_contains.length > 0 %>
    <h3><%= "#{@search}" %> <%= "(#{@recipes_contains.length})" %> </h3>
