<br />
<b> <%= @search %> </b> (<%= @ingreds.length %>)
<% if @ingreds.length > 0 %>

  <% table ["Bezeichnung", "Kategorie", "Rezepte"] do %>
    <% @ingreds.each do |ingred| %>
      <% recipes_count = ingred.find_recipes.length %>
      <% table_row(ingred, edit_ingred_path(ingred), alternating=true, show=false, edit=logged_in?, destroy=(recipes_count == 0 and logged_in?)) do %>
        <%= table_cell linkTo(ingred.name, ingred) %>
        <%= table_cell linkTo(ingred.ingredtype.name, ingred.ingredtype) %>
        <%= table_cell recipes_count %>
      <% end %>
    <% end %> <!--end .each-->
  <% end %> <!--end table-->

<% end %>
