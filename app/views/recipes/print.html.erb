<div id="form">
  <hr/>
  <br/>
  <h2><%=h @recipe.name %></h2>
  <br/>
  <hr/>
  <br/>
  <h3>Zutaten</h3>
  <% if @ingred_list.length > 0 %>
    <table>
      <% for i in 1..@ingred_list.length %>
        <% item = @ingred_list.shift %>
        <tr>
          <td><%= item.ingred %></td>
          <td><%= item.amount %></td>
          <td><%= item.unit %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <% if @ingredients.length > 0 %>
    <table>
      <% @ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.ingred %></td>
          <td><%= ingredient.amount %></td>
          <td><%= ingredient.unit %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <% if @recipe.process != "" or @recipe.process != nil %>
    <br/>
    <hr/>
    <br/>
    <h3>Zubereitung</h3>
    <br/>
    <%= @recipe.process %>
  <% end %>
  <br/>
  <hr/>
</div>
