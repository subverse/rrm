<% form('Zutat hinzufÃ¼gen', ["#{imageLinkToRemoteCancel}", "#{imageLinkTo 'Add_16x16.png', new_ingred_path, 'Neue Zutat in Stammdaten anlegen', true if logged_in?}"], nil) do%>

  <% form_for(@recipe, :url => {:action => "save_ingred", :id => @recipe.id}) do |f| %>
    <%= f.error_messages %>

    <% if @recipe.length > 0 %>
      <% i = @recipe.length %>
    <% else %>
      <% i = 1 %>
    <% end %>

    <table>
      <tr>
        <td> ingred: </td>
        <td> <%= f.collection_select :"ingred#{i}",
                 Ingred.find_all, :id, :name %> </td>
      </tr>
      <tr>
        <td> amount: </td>
        <td> <%= f.text_field :"amount#{i}" %> </td>
      </tr>
      <tr>
        <td> unit: </td>
        <td> <%= f.collection_select :"unit#{i}",
                 Unit.find_all, :id, :name %> </td>
      </tr>
    </table>
    <p>
      <%= f.submit 'OK' %>
    </p>
<% end %> <!--form_for-->

<% end %> <!--form_helper-->

