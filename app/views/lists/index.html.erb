<h1>Listing lists</h1>

<table>
  <tr>
    <th>Owner</th>
    <th>Recipe</th>
    <th>Shop it</th>
    <th>Print it</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%=h list.owner %></td>
    <td><%=h list.recipe_id %></td>
    <td><%=h list.shop_it %></td>
    <td><%=h list.print_it %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New list', new_list_path %>