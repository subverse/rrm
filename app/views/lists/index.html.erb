<h1>Listing lists</h1>

<table>
  <tr>
    <th>Recipe</th>
    <th>Shop it</th>
    <th>Print it</th>
    <th>Incl Prod</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%=h list.recipe_id %></td>
    <td><%=h list.shop_it %></td>
    <td><%=h list.print_it %></td>
    <td><%=h list.incl_prod %></td>
    <td><%= link_to_show list %></td>
    <td><%= link_to_edit edit_list_path(list) %></td>
    <td><%= link_to_destroy list %></td>
  </tr>
<% end %>
</table>
