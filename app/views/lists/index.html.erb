<% if not @lists.empty? %>
<div id="form">
<h1>Liste</h1>

<table>
  <tr>
    <th>Rezept</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= linkTo "#{Recipe.find(list.recipe_id).name}", edit_list_path(list) %></td>
    <td><%= link_to_destroy list %></td>
  </tr>
<% end %>
</table>
</div>
<% end %>
