<%= render :partial => "shared/titles", :locals => {:tab => "rrm::Quellen", :page => "" }%>
<div id="form">
  <h2>Quellen</h2>

  <% table ["Quelle", "Rezepte"] do %>
    <% @sources.each do |source| %>
      <% table_row(source, edit_source_path(source), alternating=true, show=false, edit=logged_in?, destroy=(source.recipes.length == 0)) do %>
        <%= table_cell linkTo( source.name, source ) %>
        <%= table_cell source.recipes.length %>
      <% end %>
    <% end %> <!--end .each-->
  <% end %> <!--end table-->

  <% if logged_in? %>
    <%= button_to 'Neu', new_source_path %>
  <% end %>

</div>
