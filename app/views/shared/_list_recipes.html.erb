<% if @recipes.length > 0%>

  <% table ["Rezept", "Posten", "Quelle"] do %>
    <% @recipes.each do |recipe| %>
      <% table_row(recipe, edit_recipe_path(recipe), alternating=true, show=false, edit=logged_in?, destroy=logged_in?) do %>
        <%= table_cell linkTo(recipe.name, recipe, "#{recipe.station.name}, #{recipe.source.name}") %>
        <%= table_cell linkTo(recipe.station.name, recipe.station) %>
        <%= table_cell linkTo(recipe.source.name, recipe.source) %>
      <% end %>
    <% end %> <!--end .each-->
  <% end %> <!--end table-->

<% end %>
