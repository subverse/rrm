<% menu do %>
    <%= menu_item "Finder", :filter, "Erweiterte Suche" %>
    <% submenu("Listen") do %>
      <%= submenu_item linkTo "Übersicht", {:action => 'index'} %>
      <%= submenu_item linkTo "Einkaufsliste", {:action => 'shoppinglist', :id => 1} %>
    <% end %>
    <% submenu("Drucken") do %>
      <%= submenu_item linkTo "Rezepte", {:action => 'print', :id => 1} %>
      <%= submenu_item linkTo "Zutaten", {:action => 'print_ingreds', :id => 1} %>
      <%= submenu_item linkTo "Einkaufsliste", {:action => 'print_shoppinglist', :id => 1} %>
    <% end %>
    <%= menu_item "Exit", {:controller => :rrm, :action => :index}, "Zurück zum Hauptprogramm" %>
    <% if !logged_in? %>
      <%= menu_item_to_new_tab "Login", :login %>
    <% else %>
      <%= menu_item_to_new_tab "logout (#{current_user.login})", :logout %>
    <% end %>
<% end %>



