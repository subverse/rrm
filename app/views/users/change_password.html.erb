<% form('Bearbeiten', ["#{imageLinkTo 'Cancel_16x16.png', users_path}"], nil) do %>

<% form_tag change_password_update_users_path(current_user), :method => :put do |f| %>
  <table>
    <tr>
      <td>Old Password</td>
      <td><%= password_field_tag 'old_password', @old_password, :size => 45, :class => 'text' %></td>
    </tr>
    <tr>
      <td>New Password</td>
      <td><%= password_field_tag 'password', {}, :size => 45, :class => 'text' %></td>
    <tr>

    <tr>
      <td>Confirm Password</td>
      <td><%= password_field_tag 'password_confirmation', {}, :size => 45, :class => 'text' %></td>
    </tr>
  </table>
  <%= submit_tag 'Change Password' %>
<% end %>
<% end %>

