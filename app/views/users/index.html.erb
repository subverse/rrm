<h2>Users (<%= @users.length %>)</h2>

<table>
  <tr>
    <th>Login</th>
    <th>email</th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= link_to "#{user.login}", user, :class => "link_ext" %>
    <td><%= link_to "#{user.email}", user, :class => "link_ext" %>
    <% unless !logged_in? %>
      <td><%= link_to 'Change Password', :action => 'change_password', :id => user.id if user.id == current_user.id %>
          <%= link_to 'Change email', :action => 'edit', :id => user.id %>
          <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>

    <% end %>
  </tr>
<% end %>
</table>
